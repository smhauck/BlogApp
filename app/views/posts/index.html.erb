<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Public</th>
      <th>Publish date</th>
      <th>Blog</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.public %></td>
        <td><%= post.publish_date %></td>
        <td><%= link_to post.blog.title, post.blog %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'Show', blog_post_path(@blog, post) %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(@blog, post) %></td>
        <td><%= link_to 'Destroy', blog_post_path(@blog, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_post_path %>
