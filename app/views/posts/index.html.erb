<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Public</th>
      <th>Publish date</th>
      <th>Blog</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, blog_post_path(@blog, post) %></td>
        <td><%= post.body %></td>
        <td><%= post.public %></td>
        <td><%= post.publish_date %></td>
        <td><%= link_to post.blog.title, post.blog %></td>
        <td><%= post.user.first_name %> <%= post.user.last_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_post_path %>
