<div class="post_blog_title">
</div>

<div class="post_title">
  <%= @post.title %> <% if session[:user_id] == @post.user_id %> <%= link_to image_tag('pencil-3x.png'), edit_blog_post_path(@blog, @post) %><% end %>
</div>

<div class="post_meta">
  Published <%= @post.publish_date %> by <%= @post.user.username %> in <%= link_to @post.blog.title, @post.blog %>
</div>

<div class="post_body">
  <%= simple_format(sanitize( @post.body, attributes: %w(class href style target)), {}, sanitize: false) %>
</div>

